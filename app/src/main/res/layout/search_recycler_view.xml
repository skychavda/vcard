<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/search_recycler_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/search_recycler_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/search_recycler_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/search_recycler_image"
                android:text="Akash Chavda"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/search_recycler_item_tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_recycler_item_tv_name"
                android:layout_toEndOf="@id/search_recycler_image"
                android:text="9868876"
                android:textSize="14sp"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/search_recycler_item_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_recycler_item_tv_number"
                android:layout_toEndOf="@id/search_recycler_image"
                android:text="email"
                android:textSize="14sp"
                android:paddingStart="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>