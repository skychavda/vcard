<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:id="@+id/home_recycler_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:foreground="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/home_recycler_item_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/home_recycler_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:text="Akash Chavda"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/home_recycler_item_tv_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9868876"
                android:textSize="14sp"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/home_recycler_item_tv_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="email"
                android:textSize="14sp"
                android:paddingEnd="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>