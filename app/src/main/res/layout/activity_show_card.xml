<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddCardActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/show_card_imageView"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/show_card_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_business_center_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <TextView
                    android:id="@+id/show_card_company_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_location_on_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <TextView
                    android:id="@+id/show_card_company_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:gravity="center|left"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/show_card_number"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"/>
                    <ImageButton
                        android:id="@+id/show_card_message"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_message_black_24dp"/>
                </LinearLayout>
                <!--<TextView-->
                    <!--android:id="@+id/show_card_email"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:drawableLeft="@drawable/ic_email_black_24dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:drawablePadding="10dp"-->
                    <!--android:gravity="center|left"-->
                    <!--android:text=""-->
                    <!--android:textAppearance="@android:style/TextAppearance.Medium"/>-->
                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:drawableLeft="@drawable/ic_work_black_24dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:drawablePadding="10dp"-->
                    <!--android:gravity="center|left"-->
                    <!--android:text=""-->
                    <!--android:textAppearance="@android:style/TextAppearance.Medium"/>-->
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/show_card_create_vcf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_event_note_black_24dp"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Share Card"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
</ScrollView>